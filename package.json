{
  "name": "polka-xplo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "extensions/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "turbo run db:migrate --filter=@polka-xplo/db",
    "indexer:start": "turbo run start --filter=@polka-xplo/indexer",
    "web:dev": "turbo run dev --filter=@polka-xplo/web",
    "web:build": "turbo run build --filter=@polka-xplo/web",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
