# Database
DATABASE_URL=postgresql://polkaxplo:polkaxplo@localhost:5432/polkaxplo

# Redis
REDIS_URL=redis://localhost:6379

# Polkadot Archive Node RPC
ARCHIVE_NODE_URL=wss://rpc.polkadot.io

# Local Node (optional) â€” set this when the indexer runs on the same server
# as a Substrate full node / collator. It becomes the primary RPC endpoint
# with ARCHIVE_NODE_URL as fallback. Leave commented out for remote-only mode.
# LOCAL_NODE_URL=ws://127.0.0.1:9944

# Indexer
BATCH_SIZE=100
BACKFILL_CONCURRENCY=10

# Chain identity (used for theme, branding, token config)
# Supported: polkadot, kusama, assethub, ajuna
CHAIN_ID=polkadot
NEXT_PUBLIC_CHAIN_ID=polkadot

# Security
# Admin API key for destructive endpoints (backfill, repair, maintenance).
# If unset in production, admin endpoints return 403. Generate a strong key:
#   openssl rand -hex 32
# ADMIN_API_KEY=

# Rate limiting (per IP)
# RATE_LIMIT_WINDOW=60000   # Window in ms (default: 60 000 = 1 minute)
# RATE_LIMIT_MAX=120        # Max requests per window (default: 120)

# Environment (set to "production" on deployed servers)
# NODE_ENV=production

# Web
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
